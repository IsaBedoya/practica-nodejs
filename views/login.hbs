<h1 class="text-center my-5">Iniciar sesión</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form action="/auth/login" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <input type="text" name="userEmail" class="form-control mb-2" placeholder="Ingrese su email">
            <input type="password" name="userPassword" class="form-control mb-2" placeholder="Ingrese su contraseña">
            <button class="btn btn-primary" type="submit">Acceder</button>
        </form>
    </div>
</div>